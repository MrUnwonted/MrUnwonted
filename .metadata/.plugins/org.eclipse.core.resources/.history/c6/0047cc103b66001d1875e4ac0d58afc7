#include <stdio.h>
#include <stdlib.h>

int main(void) {
	char a;
	setbuf(stdout, Null);
	printf("Enter a character:");
	scanf("%s", &a);
	printf("The character is: %s",a);

	return EXIT_SUCCESS;
}
